{
    "log": {
        "loglevel": "warning"
    },
    "reverse": {
        "bridges": [
            {
                "tag": "bridge",
                "domain": "private.qb.tunnel"
            }
        ]
    },
    "dns": {
        "servers": [
            {
                "address": "223.5.5.5",
                "port": 53,
                "domains": [
                    "geosite:cn"
                ]
            },
            "1.1.1.1",
            "8.8.8.8"
        ]
    },
    "inbounds": [
        {
            "tag": "tun-in",
            "port": 0,
            "protocol": "tun",
            "settings": {
                "name": "xray0",
                "MTU": 1500
            }
        }
    ],
    "outbounds": [
        {
            "tag": "vps-out",
            "protocol": "vless",
            "settings": {
                "vnext": [
                    {
                        "address": "${VPS_IP}",
                        "port": ${VPS_PORT},
                        "users": [
                            {
                                "id": "${UUID}",
                                "encryption": "none"
                            }
                        ]
                    }
                ]
            },
            "streamSettings": {
                "network": "xhttp",
                "security": "reality",
                "realitySettings": {
                    "publicKey": "${PUBLIC_KEY}",
                    "fingerprint": "chrome",
                    "serverName": "www.apple.com",
                    "shortId": ""
                },
                "sockopt": {
                    "mark": 255
                },
                "xhttpSettings": {
                    "path": "${XHTTP_PATH}",
                    "mode": "auto"
                }
            }
        },
        {
            "tag": "direct",
            "protocol": "freedom",
            "settings": {}
        },
        {
            "tag": "to-qb",
            "protocol": "freedom",
            "settings": {
                "redirect": "127.0.0.1:51413"
            }
        }
    ],
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "inboundTag": [
                    "bridge"
                ],
                "domain": [
                    "full:private.qb.tunnel"
                ],
                "outboundTag": "vps-out"
            },
            {
                "type": "field",
                "inboundTag": [
                    "bridge"
                ],
                "outboundTag": "to-qb"
            },
            {
                "type": "field",
                "ip": [
                    "192.168.8.0/24",
                    "geoip:private"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "ip": [
                    "geoip:cn"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "domain": [
                    "geosite:cn"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "outboundTag": "vps-out",
                "network": "udp,tcp"
            }
        ]
    }
}
